# GAP button styling
self.gap_button = QPushButton("GAP")
self.gap_button.setFixedHeight(40)
self.gap_button.setFixedWidth(200)
self.gap_button.setStyleSheet("""
    QPushButton {
        background-color: #b1e5f2;
        border: 2px solid #0b4f6c;
        border-radius: 10px;
        font-weight: bold;
        font-size: 16px;
    }
    QPushButton:hover {
        background-color: #a2d4e6;
    }
""")
self.gap_button.setCursor(Qt.CursorShape.PointingHandCursor)

# Left layout (GAP + device list + controller details)
left_layout = QVBoxLayout()
left_layout.setAlignment(Qt.AlignmentFlag.AlignTop | Qt.AlignmentFlag.AlignHCenter)
left_layout.setSpacing(15)

# GAP button
left_layout.addWidget(self.gap_button, alignment=Qt.AlignmentFlag.AlignHCenter)

# Device list
self.device_list = QListWidget()
self.device_list.setFixedWidth(400)
self.device_list.setStyleSheet("""
    QListWidget {
        border: 2px solid #2d545e;
        background-color: #f4fdff;
        font-size: 14px;
    }
    QListWidget::item:selected {
        background-color: #a0d2eb;
        color: black;
    }
""")
left_layout.addWidget(self.device_list, alignment=Qt.AlignmentFlag.AlignHCenter)

# Controller details (you already have a QWidget for it)
self.controller_details_widget.setFixedWidth(400)
left_layout.addWidget(self.controller_details_widget, alignment=Qt.AlignmentFlag.AlignHCenter)